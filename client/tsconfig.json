{
	"compilerOptions": {
		"lib": ["ESNext", "dom"],
		"moduleResolution": "node",
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"removeComments": true,
		"sourceMap": true,
		"target": "ES2020",
		"outDir": "lib",
		"types": ["node"],
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"jsx": "preserve"
	},
	"include": ["next-env.d.ts", "serverless.ts", "*.ts", "**/*.ts", "**/*.tsx", "./next-server/*.ts"],
	"exclude": ["node_modules", "./next-server/deps/nodejs/node_modules"]
}
